// https://developer.mozilla.org/en-US/docs/Mozilla/Add-ons/WebExtensions/manifest.json
{
    "manifest_version": 2,
    "name": "Shield Sheriff Helper",
    "version": "1.0.0",
    "description": "Browser Action that opens useful Shield Sheriff urls in a new themed window.",
    "developer": {
      "name": "Gregg Lind <glind@mozilla.com>"
    },
    "permissions": [
        "theme"
    ],
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "32": "badge.jpg"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}